# gem 'friendly_id', '~> 5.1.0'
gem 'inline_svg'

# Handle image uploads using carrierwave and fog
gem 'carrierwave'
gem 'carrierwave-base64'
gem 'fog'
gem 'unf'
gem 'rmagick', '2.13.4', require: 'RMagick' 

# Use the ActiveAdmin interface
gem 'inherited_resources', '~> 1.6'
gem 'activeadmin', github: 'gregbell/active_admin'
gem 'active_skin'
gem 'devise'
gem 'devise_security_extension'

# Improved select input
gem 'select2-rails'
gem 'underscore-rails'
gem 'compass-rails', '2.0.5'

